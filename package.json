{
  "name": "veritaschain",
  "version": "1.0.0",
  "description": "Git-like version control system for tracking both factual events and normative clauses with blockchain-ready architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec 'npm run build && node dist/index.js'",
    "start": "node dist/index.js",
    "demo": "npm run build && node dist/cli.js",
    "test": "echo 'Tests temporarily disabled for Phase 1 development'",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["blockchain", "version-control", "news", "legal", "facts", "events"],
  "author": "VeritasChain",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "uuid": "^9.0.0",
    "@noble/hashes": "^1.3.0",
    "@noble/ed25519": "^2.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.0.0"
  }
}